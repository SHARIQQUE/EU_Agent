<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/titleTextVie_BillPayFinal"
        android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_weight=".1"
              android:text="@string/billpayment_title"
              android:gravity="center"
              android:textSize="16sp"/>



        <LinearLayout
            android:id="@+id/input_LL_BillSelectionFinal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listView_BillSelectionFinal"
                android:layout_width="match_parent" android:layout_height="0dp"
                android:choiceMode="singleChoice"
                android:layout_weight=".6">

            </ListView>

            <LinearLayout
                android:id="@+id/progressDialog_LL_BillPayFinal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <ProgressBar

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:indeterminate="true"/>

            </LinearLayout>


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/selectAll_BillSelection"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="@string/SelectAllBills"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/roundcorner"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/stop_BillPayFinalScreen"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingRight="1dp"
            android:paddingLeft="15dp"
            android:text="@string/stopBillPay"
            android:background="@drawable/roundcorner"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>