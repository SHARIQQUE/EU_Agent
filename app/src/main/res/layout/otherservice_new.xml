<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <include
        android:id="@+id/tool_bar_otheraccount"
        layout="@layout/toolbar_custom"
        android:elevation="1dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:text="@string/otherservice_cap"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/transactionApproval_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transactionacancel"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/transactionApproval_small"

                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:visibility="visible" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"

                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/reports_print_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/reports"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/report_prints"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/transaction_cancel_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transactionacancel1"
                    android:padding="10dp"


                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/transactionCancel_small"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:gravity="center"

            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/customerServices_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/customerservice1"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/customerService_small"

                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:visibility="visible" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"

                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pictureSign_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/signsignature"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/pictures_and_Sign"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/tariff_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tariff2"
                    android:padding="10dp"


                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/tariff_small"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:gravity="center"

            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/order_transfer_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ordertransfer"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/orderTransfer_capital"

                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:visibility="visible" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"

                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/orderTransferApproval_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/orderapproval"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/orderTransferApproval_capital"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/changeMpin_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/changempin"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/changempin"

                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:visibility="visible" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:gravity="left"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="100dp"

                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/changeLanguage_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/languagechange"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/changelanguage"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logout_linearlayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/logout"
                    android:padding="10dp"


                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/logout_small"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/internationalRemittance_linearLayout"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/international"
                    android:padding="10dp"

                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/international_Remittance"

                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:visibility="visible" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/linearLayout_changelanguageSetting_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <Spinner
                android:id="@+id/spinner_Language_Customerservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:entries="@array/LanguageSelection">

            </Spinner>

            <Button
                android:id="@+id/customerService_CustomerService"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight=".4"
                android:background="@drawable/roundcorner"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/btn_changelanguage"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>

