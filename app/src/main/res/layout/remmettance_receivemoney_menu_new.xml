<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <include
        android:id="@+id/tool_bar_remmetanceSendMoneymenu"
        layout="@layout/toolbar_custom"
        android:elevation="1dp"/>

    <Button
        android:id="@+id/eraMobile_Button"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="@string/eraMobile"
        android:background="@drawable/roundcorner"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cashToCash_button"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"

        android:text="@string/cashToCash"
        android:background="@drawable/roundcorner"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/remmitance_send_money_toname"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="@string/remmitance_send_money_toname"
        android:background="@drawable/roundcorner"
        android:textStyle="bold"/>



</LinearLayout>
