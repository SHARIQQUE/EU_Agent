<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <include
        android:id="@+id/tool_bar_remmetanceSendMoneymenu"
        layout="@layout/toolbar_custom"
        android:elevation="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_partone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="50dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/purchase_billpayment_deposit_new"

                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"

                android:gravity="center"

                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buyAirtime_button"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/billpay2"
                        android:padding="10dp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/buy_airtime"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/electricityWater_button"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/recharge_meter"
                        android:padding="10dp"
                        android:layout_marginTop="12dp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/electricityBillWater"
                        android:textAllCaps="false"

                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/tvSubscription_button"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/tvsubscription"
                        android:padding="10dp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/tv_subscription"
                        android:textAllCaps="false"

                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"

                android:gravity="center"

                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/tuitionfees_button"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/tutionfees_new"
                        android:padding="10dp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"

                        android:text="@string/tution_fees"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/taxes_button"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/settle"
                        android:padding="10dp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/taxes"

                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/cashToMarchant_button"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/cashtomarchant"
                        android:padding="10dp"

                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/cash_to_marchant"

                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>







        </LinearLayout>


    </ScrollView>


</LinearLayout>

