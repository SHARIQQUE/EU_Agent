                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="italic" />


                <TextView


                    android:id="@+id/firstName_TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Prénom (s) :"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="first name"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="italic" />

                <TextView


                    android:id="@+id/datePlaceBirth_TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Date et lieu de naissance :"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and Place of birth"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="italic" />

                <TextView


                    android:id="@+id/nationality_TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nationalité"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="italic" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="N°Pièce d'identification(CNI, passeport ou carte de séjour valide):"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identification document number (NIC, passport or residence permit)"
                    android:textColor="#000"
                    android:textSize="5sp"
                    android:textStyle="italic" />

                <TextView

                    android:id="@+id/identification_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
