<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/review_SV_AccToCash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:text="@string/TransferBasisReviewAccToCash"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/transferBasis_TxtView_Review_AccToCash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Recipient Country: "
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".5"

                    android:gravity="center"
                    android:text="@string/pay"
                    android:textColor="#000"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".5"

                    android:gravity="center"
                    android:text="@string/tution_fees_capital"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="-2dp"

                android:background="@drawable/edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:text="@string/country"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/countryName_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight=".5"
                    android:gravity="right"
                    android:paddingRight="5dp"


                    android:textColor="#DC1605"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-2dp"

                android:background="@drawable/edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"

                    android:text="@string/schoolCode"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/schoolCode_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:paddingRight="5dp"

                    android:textColor="#DC1605"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/edittext_bg"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:text="@string/region_small"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/region_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textColor="#DC1605"

                    android:textSize="16sp" />
            </LinearLayout>


            demo

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/edittext_bg"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:text="@string/division"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/division_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textColor="#DC1605"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/edittext_bg"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:text="@string/sub_division"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sub_division_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textColor="#DC1605"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/edittext_bg"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:text="@string/City"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/city_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textColor="#DC1605"

                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:background="#F9EC2C"
                    android:gravity="left"
                    android:text="@string/schoolname_review_page"

                    android:textColor="#000000"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/schoolname_textview"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".5"
                    android:background="#F9EC2C"
                    android:gravity="right"

                    android:textColor="#DC1605"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".5"

                    android:gravity="center"
                    android:text="@string/find_a_student"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight=".5"

                    android:gravity="left"
                    android:text="@string/search_with_new"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_registrationType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background">

            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="4">


                <AutoCompleteTextView
                    android:id="@+id/findMobileNumber_autoCompleteTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical|left"
                    android:hint="@string/mobileNumber"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="16dp" />

                <AutoCompleteTextView
                    android:id="@+id/findRegistrationNumber_autoCompleteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical|left"
                    android:hint="@string/registrationNumber"
                    android:imeOptions="actionNext"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:visibility="gone" />


                <AutoCompleteTextView
                    android:id="@+id/find_name_autoCompleteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical|left"
                    android:hint="@string/name_tutionfees_new"
                    android:imeOptions="actionNext"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/button_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundcorner"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/find"
                    android:textColor="#fff"

                    android:textStyle="bold" />


            </LinearLayout>


            <Spinner
                android:id="@+id/spinner_search_result"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/spinner_background"
                android:visibility="gone">

            </Spinner>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".5"

                    android:gravity="center"
                    android:text="@string/studentDetails"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/studentRegistrationNumber"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <AutoCompleteTextView
                android:id="@+id/studentRegistrationNumber_autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical|left"
                android:hint="@string/studentRegistrationNumber"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "

                android:maxLength="20"
                android:maxLines="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/studentName_third_page"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <EditText
                android:id="@+id/studentName_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:gravity="center_vertical|left"
                android:hint="@string/studentName_third_page"
                android:imeOptions="actionNext"

                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/studentFirstName_reviewpage_new"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <EditText
                android:id="@+id/studentName_first_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:gravity="center_vertical|left"
                android:hint="@string/studentFirstName_reviewpage_new"
                android:imeOptions="actionNext"

                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/student_gender_title"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <Spinner
                android:id="@+id/spinner_gender_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/spinner_background">

            </Spinner>

            <Spinner
                android:id="@+id/spinnerCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerSendMode_AccToCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/student_birth_date"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">


                <AutoCompleteTextView
                    android:id="@+id/dateOfBirtDate_autocompletetextview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2"

                    android:background="@drawable/edittext_bg"
                    android:digits="-/1234567890"
                    android:gravity="center_vertical|left"
                    android:hint="@string/birth_date"
                    android:imeOptions="actionNext"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/dateOfBirth_calender_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"

                    android:background="@drawable/calendericon" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/studentMobileNumber"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <AutoCompleteTextView
                android:id="@+id/studentMobileNumber_autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical|left"
                android:hint="@string/studentMobileNumber"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="12"
                android:maxLines="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/studentmail"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <EditText
                android:id="@+id/email_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical|left"
                android:hint="@string/studentmail"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">


                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundcorner"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/submit"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/submitButton_secondPage"
                    android:layout_width="200dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundcorner"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/submit"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
